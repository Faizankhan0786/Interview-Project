<style type="text/css">
   .root{
   display: flex;
   justify-content: center;
   align-items: center;
   background-color:white;
   height: auto;
   }
   .subdiv{
    width: 800px;
    height: auto;
   margin-top: 10px;
   background-color: white;
   padding: 10px;
   border-radius: 10px;
   border: 1px solid black
   }
   
   
   </style>




<html>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>


<body>
   <div class="root">
      <div class="subdiv">
     <h4>List of Customers</h4>
     <h6><a href='/customer/customerinterface'>Add New Customer</a></h6>

   <table class="table">
        
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Customer</th>
          <th scope="col">Birth Date</th>
          <th scope="col">Contact</th>
          <th scope="col">Address</th>
          <th scope="col">Picture</th>
          <th scope="col">Update</th>
        </tr>
      </thead>
    
    
<tbody>
<% data.map(function(item,index){ var d= new Date(item.dob) %>
   <tr>
        <th scope="row"><%=item.customerid %></th>
        <td><%=item.customername %><br><%=item.gender%></td>
        <td><%=(d.getDate())+"/"+(d.getMonth()+1)+"/"+(d.getFullYear()) %></td>
        <td><%=item.emailaddress %><br><%=item.mobileno %></td>
        <td><%=item.address %><br><%=item.sname %>,<%=item.cname %></td>
        <td><a href='/customer/displaypicture?cid=<%=item.customerid %>&picture=<%=item.picture %>'><img src="/images/<%=item.picture %>" width="45" height="45" style="border-radius: 10px;"></a></td>
        <td><a href="/customer/displaybyid?cid=<%=item.customerid %>">Edit/Delete</a></td>
      </tr>




<% }) %>
</tbody>
</table>
</div>
</div>

</html>